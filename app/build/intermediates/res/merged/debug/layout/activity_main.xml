<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/squeezeback"
    tools:context="hitha.ken.deva.abin.smartbudget.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="6dp"
            android:layout_weight="47"
            android:gravity="left"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="55dp" />

        <TextView
            android:id="@+id/wallet"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="93dp" />
    </LinearLayout>

    <Button
        android:id="@+id/add"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="153dp"
        android:layout_height="93dp"
        android:onClick="addexp"
        android:text="Add Transaction"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/view"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="view"
        android:text="View ALl"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:layout_marginEnd="48dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/buylist"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="194dp"
        android:layout_marginBottom="194dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="128dp"
        android:layout_height="77dp"
        android:onClick="pay"
        android:text="pay"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toLeftOf="@+id/view"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/buylist"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/add"
        android:layout_marginBottom="62dp" />

    <Button
        android:id="@+id/buylist"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:onClick="addlist"
        android:text="add/viewlist"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="104dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
